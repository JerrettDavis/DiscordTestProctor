@using Microsoft.AspNetCore.Hosting
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Janus Proctor Console</title>
    <meta name="description" content="Janus Proctor Console helps Discord communities run certifications, exams, and role-based access with confidence." />
    <meta name="theme-color" content="#0f172a" />
    <link rel="icon" type="image/svg+xml" href="~/janus-mark.svg" />
    <link rel="apple-touch-icon" href="~/janus-mark.svg" />

    <link rel="stylesheet" href="~/css/identity.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,600;9..144,700&family=Space+Grotesk:wght@400;500;600;700&display=swap" />
</head>
<body>
    <div class="identity-shell">
        <section class="identity-hero">
            <div class="identity-pill">Janus Proctor Console</div>
            <h1>Secure, verify, and certify your communities.</h1>
            <p>
                Log in to manage guild onboarding, launch certifications, and award roles with confidence.
                Your dashboard stays in sync with live Discord activity.
            </p>
            <div class="identity-helper">
                Need help? Invite the bot and return here to grant admin access.
            </div>
        </section>

        <section class="identity-card">
            <div class="identity-nav">
                <span class="identity-brand">Janus Console</span>
                <a class="identity-link" href="~/">Return to app</a>
            </div>
            <partial name="_CookieConsentPartial" optional />
            <main role="main">
                @RenderBody()
            </main>
            <div class="identity-footer">
                <span>&copy; 2026 Janus Proctor. All rights reserved.</span>
                <span class="identity-footer-links">
                    <a asp-page="/Privacy">Privacy</a>
                    <a asp-page="/Terms">Terms</a>
                    <a href="~/health">Status</a>
                </span>
            </div>
        </section>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
